<div class="row justify-content-center align-items-center my-5">
    <div class="col-10 col-md-8 col-lg-6 text-center">
        <h1 class="fw-bold">{{product.name}}</h1>
        <p class="my-3">Preço: R$ {{product.price}}</p>
        <img src="{{product.image}}" alt="{{product.name}}" class="w-50 rounded-circle shadow">
        <p class="my-4">Descrição: {{product.description}}</p>
        <form action="/products/remove/{{product._id}}">
            <input type="submit" value="Excluir" class="btn btn-dark shadow w-50">
        </form>
    </div>
</div>